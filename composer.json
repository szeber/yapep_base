{
  "name": "szeber/yapep_base",
  "type": "library",
  "description": "YAPEP Base framework",
  "require": {
    "php": ">=7.3.0",
    "lukasoppermann/http-status": "^2.0.1",
    "pimple/pimple": "^3.2",
    "psr/container": "1.0.0",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.0",
    "mockery/mockery": "^1.2",
    "symfony/yaml": "^4.2.3"
  },
  "suggest": {
    "symfony/yaml": "Required for working with YAML files"
  },
  "autoload": {
    "psr-4": {
      "YapepBase\\": "src",
      "YapepBase\\Test\\": "test"
    }
  },
  "repositories": {
    "dev-package": {
      "type": "path",
      "url": "src/YapepBase",
      "options": {
        "symlink": true
      }
    }
  },
  "authors": [
    {
      "name": "Zsolt Szeberenyi",
      "email": "szeber@yapep.org"
    },
    {
      "name": "László Fodor (emul)"
    }
  ]
}
